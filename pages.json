{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/center/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		},
		{
			"path": "pages/shops/index",
			"style": {
				"navigationBarTitleText": "购物中心"
			}
		},
		{
			"path": "pages/auth/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		}
	    ,{
            "path" : "pages/cart/index",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "购物车",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/auth/register",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "注册",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uView",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	    "color": "#000000",
	    "selectedColor": "#1396DB",
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/index/index",
	        "iconPath": "static/icon/h.png",
	        "selectedIconPath": "static/icon/h(1).png",
	        "text": "首页"
	    },{
		    "pagePath": "pages/shops/index",
		    "iconPath": "static/icon/shop.png",
		    "selectedIconPath": "static/icon/shop(1).png",
		    "text": "商品"
		},{
		    "pagePath": "pages/cart/index",
		    "iconPath": "static/icon/g.png",
		    "selectedIconPath": "static/icon/g(1).png",
		    "text": "购物车"
		},{
	        "pagePath": "pages/center/index",
	        "iconPath": "static/icon/m.png",
	        "selectedIconPath": "static/icon/m(1).png",
	        "text": "我"
	    }]
	}
}
